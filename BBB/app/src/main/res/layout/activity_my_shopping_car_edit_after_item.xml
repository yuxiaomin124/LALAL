<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.bbb.my.shopping_car.after.SlidingMenuViewCustom
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llayout_my_shopping_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_my_shopping_car_edit_after"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/selete_shopping_edit_after"
                android:button="@null"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shopping_grag_line">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_my_shopping_car_edit_after_item_head"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_my_shopping_car_edit_after_item_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:maxLines="2"
                            android:text="color"/>

                        <TextView
                            android:id="@+id/tv_my_shopping_car_edit_after_item_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="size"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_my_shopping_car_edit_after_item_delete"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/issue_btn_picadd3x"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="0.5dp"
                                    android:background="@color/grayBackGround"/>

                                <TextView
                                    android:id="@+id/tv_my_shopping_car_edit_after_item_num"
                                    android:layout_width="25dp"
                                    android:layout_height="24dp"
                                    android:gravity="center"
                                    android:text="1"/>

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="0.5dp"
                                    android:background="@color/grayBackGround"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_my_shopping_car_edit_after_item_add"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/issue_btn_picadd3x"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_my_shopping_car_edit_after_item_price_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="179"
                            android:textColor="@color/red"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grayBackGround"/>

                            <TextView
                                android:id="@+id/tv_my_shopping_car_edit_after_item_price_old"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="379"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_alignLeft="@id/tv_my_shopping_car_edit_after_item_price_old"
                                android:layout_alignRight="@id/tv_my_shopping_car_edit_after_item_price_old"
                                android:layout_marginTop="8dp"
                                android:background="#b6b5b5"/>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_my_shopping_car_edit_after_item_totalpay"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/shape_login_button"
                            android:text="结 算"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ll_my_shopping_after_delete"
            android:background="@android:color/holo_red_light"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_shopping_car_after_delete_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="删 除"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</com.example.administrator.bbb.my.shopping_car.after.SlidingMenuViewCustom>