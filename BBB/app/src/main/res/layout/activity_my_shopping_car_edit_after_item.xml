<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <CheckBox
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:button="@null"
        android:background="@drawable/selete_shopping_edit_after"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_shopping">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_shopping_car_default_item_head"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_shopping_car_default_item_color"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:text="color"/>

                <TextView
                    android:id="@+id/tv_my_shopping_car_default_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="size"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_my_shopping_car_default_item_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/issue_btn_picadd3x"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="0.5dp"
                            android:background="@color/grayBackGround"/>

                        <TextView
                            android:id="@+id/tv_my_shopping_car_default_item_num"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="1"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="0.5dp"
                            android:background="@color/grayBackGround"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_my_shopping_car_default_item_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/issue_btn_picadd3x"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_shopping_car_default_item_price_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="179"
                    android:textColor="@color/red"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/grayBackGround"/>

                    <TextView
                        android:id="@+id/tv_my_shopping_car_default_item_price_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="379"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_my_shopping_car_default_item_totalpay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_login_button"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="结 算"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>