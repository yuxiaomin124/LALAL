<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_declare_register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/fann3x"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="登录"/>

    <LinearLayout
        android:id="@+id/llayout_declare_register_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_declare_register_back"
        android:background="@color/grayBackGround">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="将发送验证码到您的手机!"
            android:textColor="@color/yellowTheme"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reLayout_declare_register_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llayout_declare_register_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_register">

        <TextView
            android:id="@+id/tv_declare_register_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="手机号"/>

        <EditText
            android:id="@+id/et_declare_register_phonrnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_declare_register_num"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint="请填写手机号"
            android:textSize="13sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llayout_declare_register_getword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reLayout_declare_register_phonenum"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/reLayout_declare_register_getword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/shape_register"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_declare_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="请输入验证码"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_declare_register_tv"
                android:layout_weight="2"
                android:background="@null"
                android:hint="输入"
                android:layout_marginTop="5dp"
                android:textSize="13sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/reLayout_declare_register_getword"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/reLayout_declare_register_getword"
            android:layout_weight="1"
            android:background="@drawable/shape_login_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="获取验证码"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_declare_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llayout_declare_register_getword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_register"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_declare_register_password_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:text="请设置登录密码"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center_horizontal"
            android:hint="请填写登录密码"
            android:textSize="13sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llayout_declare_register_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_login_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="下一步"
            android:textColor="@android:color/white"/>


    </RelativeLayout>
</RelativeLayout>